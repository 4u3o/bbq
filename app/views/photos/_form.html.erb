<div class="mb-3">
  <%= simple_form_for([@event, photo], html: { multipart: true }) do |f| %>
    <div class="form-inputs">
      <%= f.input :photo, as: :file %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t('app.save'), class: 'btn-primary' %>
    </div>
  <% end %>
</div>
