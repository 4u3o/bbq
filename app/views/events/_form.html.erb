<div class="col-md-6 my-3">
  <%= simple_form_for(@event) do |f| %>
    <%= f.error_notification %>

    <%= f.input :title %>
    <%= f.input :address %>

    <%= f.label :datetime, class: 'form-label' %>
    <%= f.input_field :datetime,
                      as: :string,
                      class: 'form-control datepicker-here mb-3',
                      autocomplete: 'off',
                      data: { timepicker: true } %>

    <%= f.input :description %>
    <%= f.input :pincode %>

    <%= f.button :submit, t('app.save'), class: 'btn-primary' %>
    или <%= link_to t('app.back'), :back, class: 'text-decoration-none' %>
  <% end %>
</div>
