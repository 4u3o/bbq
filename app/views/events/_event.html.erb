<%# Паршиал для отображения инфы об отдельном событии %>
<div class="col-sm-6 col-md-4">
  <div class="thumbnail text-left mb-3">

    <%= content_tag 'div', '', class: 'event-background',
      style: "background-image: url(#{asset_pack_path('media/images/event_thumb.jpg')})" %>

    <div class="event-info-inner">
      <div class="card-body">
        <div class="event-description">
          <h3><%= link_to event.title, event_path(event) %></h3>
<!--          locale: :en фиксит ошибку на хероку, свзяанную с локализацией, временно-->
          <h3><small><%= l(event.datetime, format: :long, locale: :en) %></small></h3>
          <div class="buffer-both"><%= event.address %></div>
        </div>
      </div>
    </div>
  </div>
</div>
